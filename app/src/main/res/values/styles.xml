<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="video_forward_seekbar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/video_forward_seek_bar</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:thumb">@android:color/transparent</item>
    </style>
</resources>
